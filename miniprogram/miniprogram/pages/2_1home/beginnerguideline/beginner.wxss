.background {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  position: absolute;
  z-index: -1;
}
.left{
  display: flex;
  width: 30%;
  height: 40%;
  flex-direction: column;
  justify-content: space-around;
  position: absolute;
}
.ide{
  top: 10%;
  background: #ced1fc;
  width: 100%;
  height: 20%;
  text-align: center;
  line-height: 40px;
  position: relative;
  z-index: 0;
}

.line{
  position: relative;
  z-index: 0;
  background: #E0E3DA;
  width: 0.5%;
  height: 100%;
  left: 30%;
}

.right{
  display: flex;
  left: 35%;
  top: 2%;
  width: 70%;
  height: 80%;
  flex-direction: column;
  justify-content: space-around;
  align-content: space-around;
  position: absolute;
}
.eachrow{
  width: 41%;
  height: 100%;
  position: absolute;
  z-index: 0;
}
.subsquare{
  top: 5%;
  background: #ced1fc;
  width: 100%;
  text-align: center;
  line-height:60px;
  height:60px;
  position: relative;
  z-index: 1;
}
